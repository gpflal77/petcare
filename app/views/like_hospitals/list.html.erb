 <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Favorite Hospitals</h1>

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">내가 즐겨찾는 병원 정보</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                
                
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>사진</th>
                      <th>병원이름</th>
                      <th>진료시간</th>
                      <th>추가정보</th>
                    </tr>
                  </thead>
                  
                  <tbody>
                    <% @hospital.each do |x| %>
                    <tr>
                      <td><%= image_tag "smart.JPG", class:"img-fluid px-3 px-sm-4 mt-3 mb-4", style:"width: 20rem;" %></td>
                      <td><%= x.name %></td>
                      <td><%= x.open_time %></td>
                      <td><%= x.addr %> <br><hr>
                      <a href='tel:<%= x.tel_no %>'><button type="button" class="btn btn-warning"><i class="fas fa-phone fa-2x text-300"></i>전화하기</button></a><hr>
                      <a href="https://map.naver.com" target="_blank">
                        <!--<span class="icon text-white-50">
                          <i class="fas fa-flag"></i>
                        </span>-->
                        <button type="button" class="btn btn-success">지도보기</button></span>
                      </a>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                </div>
              </div>
          </div>
          <div class="row justify-content-center">
            <%= @pagy.to_s %>
            <% #pagy_bootstrap_nav(@pagy).html_safe %>
          </div>
        </div>
        <!-- /.container-fluid -->
