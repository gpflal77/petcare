<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Kind</th>
      <th>Breed</th>
      <th>Gender</th>
      <th>Birth date</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Reg date</th>
      <th>Reg</th>
      <th>Modi date</th>
      <th>Modi</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.user_id %></td>
        <td><%= pet.name %></td>
        <td><%= pet.kind %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.gender %></td>
        <td><%= pet.birth_date %></td>
        <td><%= pet.age %></td>
        <td><%= pet.weight %></td>
        <td><%= pet.reg_date %></td>
        <td><%= pet.reg_id %></td>
        <td><%= pet.modi_date %></td>
        <td><%= pet.modi_id %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

