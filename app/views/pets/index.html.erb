<div class="container-fluid">
  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">반려동물 리스트</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <colgroup>
            
          </colgroup>
          <tbody>
            <% @pets.each do |pet| %>
              <tr>
                <td width="50%">
                      <% if pet.photo_file.attached? %>
                      <%= image_tag url_for(pet.photo_file), {:style=>'height:150px;', :class => "img-fluid px-3 px-sm-4 mt-3 mb-4"} %>
                      <% else %>
                          첨부된 사진이 없습니다
                      <% end %>
                </td>
                <td width="30%"><%= pet.name %></td>
                <td width="20%"><%= link_to '보기', pet %>
                  | <%= link_to '수정', edit_pet_path(pet) %>
                  | <%= link_to '삭제', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer">
      <div class="text-right">
        <%= link_to '반려동물 추가하기', new_pet_path,  class:"btn btn-success text-white" %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
    
</div>

